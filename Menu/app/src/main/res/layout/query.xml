                android:textSize="14sp"
                android:layout_toRightOf="@id/seller" />

        </RelativeLayout>

        <View style="@style/Horizontal_line_style" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
