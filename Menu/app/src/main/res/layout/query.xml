                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:inputType="text"
                android:maxLength="10"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textColor="@color/queryInputText"
                android:textColorHint="@color/queryInputHint"
                android:textSize="14sp"
                android:layout_toRightOf="@id/car" />

        </RelativeLayout>


        <View style="@style/Horizontal_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/buyer"
                style="@style/TV.QueryParamDescNew"
                android:layout_centerVertical="true"
                android:text="@string/buyerPhone" />

            <EditText
                android:id="@id/queryBuyerPhone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textColor="@color/queryInputText"
                android:textColorHint="@color/queryInputHint"
                android:textSize="14sp"
                android:layout_toRightOf="@id/buyer" />

        </RelativeLayout>

        <View style="@style/Horizontal_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

